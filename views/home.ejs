      function go(i) {
        slides.forEach(s => s.classList.remove('active'));
        slides[i].classList.add('active');
        idx = i;
      }

      prev.onclick = () => go((idx - 1 + slides.length) % slides.length);
      next.onclick = () => go((idx + 1) % slides.length);

      timer = setInterval(() => go((idx + 1) % slides.length), 5000);

      // Pause on hover
      document.getElementById('slideshow-gallery')
        .addEventListener('mouseenter', () => clearInterval(timer));
      document.getElementById('slideshow-gallery')
        .addEventListener('mouseleave', () => timer = setInterval(() => go((idx + 1) % slides.length), 5000));
    });
  </script>

