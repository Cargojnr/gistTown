      width: 100% !important;
    }

    .pin-card .card {
      padding: .5rem !important;
    }

    .avatar-profile img:hover {
      transform: scale(1.05);
    }

    .profile-info h2 {
      margin: 0;
      font-size: 1.8rem;
    }

    .profile-info .tagline {
      color: var(--text-muted);
      font-style: italic;
      margin-bottom: 1rem;
    }

    .quick-stats {
      display: flex;
      gap: 1.5rem;
      margin: 1rem 0;
    }

    .stat {
      text-align: center;
    }

    .stat strong {
      font-size: 1.2rem;
      color: var(--primary);
    }

    /* Buttons */
    .edit-profile-btn,
    .edit,
    .delete,
    .read-more,
    .edit-comment,
    .delete-comment {
      background: var(--primary);
      color: var(--text);
