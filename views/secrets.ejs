    .reaction-counters {
      margin-top: 1rem;
      display: flex;
      gap: 1rem;
      font-size: 1.1rem;
    }

    .reaction-counters .counter {
      background: var(--highlight);
      padding: 0.5rem 1rem;
      border-radius: 12px;
    }


    /* Followers */
    .follow-stats {
      display: flex;
      gap: 2rem;
      font-size: 1rem;
    }

    .followers,
