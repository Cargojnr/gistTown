      border-radius: 8px;
      padding: 0.5rem 1rem;
      margin-top: 0.5rem;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .edit-profile-btn:hover,
    .read-more:hover,
    .edit-comment:hover,
    .delete-comment:hover {
      background: var(--secondary);
    }


    .card-actions {
      margin-top: 1rem;
      display: flex;
      gap: 0.5rem;
    }

    .card-actions button {
      font-size: 0.9rem;
    }

    /* Reactions */
